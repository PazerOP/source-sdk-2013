#include "common_ps_fxc.h"

const float4 gAlphaScale : register( c0 );
sampler TexSampler	: register( s0 );

struct PS_INPUT
{
	float2 baseTexCoord				: TEXCOORD0;
};

float4 main(PS_INPUT i) : COLOR
{
  float4 baseColor = tex2D(TexSampler, i.baseTexCoord);
  return float4(baseColor.rgb, baseColor.a * gAlphaScale.x);
}